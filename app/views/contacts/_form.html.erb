<%= form_for @contact, class: 'form-control', remote: true do |f| %>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <form role="form">
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", id: "form-name", placeholder: "Enter Name" %>
        <%= f.email_field :email, class: "form-control", id: "form-email", placeholder: "Enter Email" %>
        <%= f.email_field :phone_number, class: "form-control", id: "form-phone", placeholder: "Enter Phone Number" %>
        <%= f.email_field :message, class: "form-control", id: "form-message", placeholder: "Leave a Message" %>
      </div>
        <%= f.submit class: 'request-invite btn btn-primary btn-lg submit-button', value: 'Send', name: 'submit' %>
      </form>
    </div>
  </div>
<% end %>